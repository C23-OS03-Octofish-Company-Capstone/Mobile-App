<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapstoneFishkuSeller" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fishku_blue</item>
        <item name="colorPrimaryVariant">@color/fishku_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fishku_blue</item>
        <item name="colorSecondaryVariant">@color/fishku_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FishkuText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="FishkuText.Subtitle" parent="FishkuText">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/fishku_blue</item>
    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize the appearance of the dropdown popup -->
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <!-- Add any other customizations as needed -->
    </style>

    <!--    Button-->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundedImageView40" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>
</resources>